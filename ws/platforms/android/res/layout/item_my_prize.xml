<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/selector_my_order_bg"
    android:gravity="center_vertical|right"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/lightgray" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/food_default_text"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/order_food_num"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="10菜"
                android:textColor="@color/deepGray"
                android:textSize="16dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="中奖号: "
                    android:textColor="@color/deepGray"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/order_osn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical"
                    android:text="3465465"
                    android:textColor="@color/orange"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="2014-10-22 22:22:22"
                android:textColor="@color/middleGray"
                android:textSize="15dp" />
        </LinearLayout>


        <Button
            android:id="@+id/use_prize_btn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_common_middle_btn"
            android:text="兑现"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/lightgray" />
    </LinearLayout>


    <ImageView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dividor" />
</RelativeLayout>