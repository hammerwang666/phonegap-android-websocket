<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.qnear.ags.customerclient.ui.MyOrderDetailActivity">

    <!-- 顶部栏 begin -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginBottom="20dp"
        android:background="@drawable/topbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_back_layout"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_topbtn"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/arrow_back" />

            <TextView
                android:id="@+id/btn_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 顶部栏 end -->


    <ScrollView
        android:id="@+id/order_detail_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/order_detail_bg"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/detail_wrap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/order_qrcode"
                android:layout_width="300dp"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/osn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="充值时请让服务员扫一扫"
                android:textColor="@color/deepGray"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/order_detail_line" />

            <com.qnear.ags.customerclient.ui.Util.ListViewForScrollView
                android:id="@+id/order_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/order_detail_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="合计: "
                    android:textColor="@color/deepGray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="633元"
                    android:textColor="@color/orange"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lottery_status"
                    android:visibility="gone"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|right"
                    android:text="(已抽奖) "
                    android:textColor="@color/orange"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/pay_status"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|right"
                    android:text="(未支付) "
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/to_pay_wrap"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <Button
                    android:visibility="gone"
                    android:id="@+id/my_wallet_pay"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/middleGray"
                    android:clickable="true"
                    android:enabled="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="我的钱包支付(余额:加载中..)"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/to_lottery_wrap"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <Button
                    android:visibility="gone"
                    android:id="@+id/to_lottery"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_common_large_btn"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="去抽奖"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
