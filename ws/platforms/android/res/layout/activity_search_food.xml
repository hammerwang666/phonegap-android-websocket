<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.qnear.ags.customerclient.ui.SearchFoodActivity">

    <!-- 顶部栏 begin -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/topbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_back_layout"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_topbtn"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/arrow_back" />

            <TextView
                android:id="@+id/btn_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 顶部栏 end -->


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">


        <EditText
            android:id="@+id/search_key"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:paddingLeft="13dp"
            android:hint="搜索菜名"
            android:background="@drawable/input_common_bg"
            android:textColor="@color/deepGray" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/selector_common_middle_btn"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommend_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textColor="@color/deepGray"
            android:text="推荐搜索"/>

        <GridView
            android:id="@+id/recommend_search_list"
            android:layout_width="fill_parent"
            android:numColumns="3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content">

            </GridView>
        </LinearLayout>
    <ListView
        android:id="@+id/search_res_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:visibility="gone" />


    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cfm_order_list"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="0dp"
        android:layout_weight="8" />


    <!-- 操作栏 begin -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/order_food_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"

            android:layout_weight="1">

            <TextView
                android:id="@+id/total_food1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="0菜"
                android:textColor="@color/orange"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/total_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text=" 0元"
                android:textColor="@color/orange"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/confirm_order"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="8dp"
            android:background="@drawable/selector_common_middle_btn"
            android:clickable="true"
            android:text="下单"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
    <!-- 操作栏 end -->
</LinearLayout>
