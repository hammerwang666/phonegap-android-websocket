<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/lightgray"
    tools:context="com.qnear.ags.customerclient.ui.AboutUsActivity">

    <!-- 顶部栏 begin -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/topbar_bg">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:id="@+id/btn_back_layout"
            android:background="@drawable/selector_topbtn"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/arrow_back" />

            <TextView
                android:id="@+id/btn_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="关于我们"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="23sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 顶部栏 end -->


    <ImageView
        android:layout_margin="25dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/app_icon_yudian"/>

    <TextView
        android:id="@+id/ver_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/deepGray"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"/>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dividor"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"
                android:background="@drawable/icon_write"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/deepGray"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="去评分"/>
            <ImageView
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:background="@drawable/arrow_right2"/>
            </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dividor"/>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/call_hot_line"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"
                android:background="@drawable/icon_phone"/>
            <TextView
                android:id="@+id/hot_line"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/deepGray"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="客服热线: 020-11211121"/>
            <ImageView
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:background="@drawable/arrow_right2"/>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dividor"/>

        </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:textColor="@color/deepGray"
            android:textSize="18sp"
            android:text="@string/copyright"
            android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>
