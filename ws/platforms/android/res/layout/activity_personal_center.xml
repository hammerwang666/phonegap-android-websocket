<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/lightgray"
    tools:context="com.qnear.ags.waiterpadclient.ui.PersonalCenterActivity">

    <!-- 顶部栏 begin -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/topbar_bg">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:id="@+id/btn_back_layout"
            android:background="@drawable/selector_topbtn"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/arrow_back" />

            <TextView
                android:id="@+id/btn_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="个人中心"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="23sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 顶部栏 end -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/p_center_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/p_center_top_bg">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/p_center_head1" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/usrName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/deepGray"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="顾客" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:textSize="15sp"-->
                    <!--android:text="手机号: 1598883422"-->
                    <!--android:textColor="@color/deepGray"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:gravity="center_vertical" />-->


                <!--<TextView-->
                    <!--android:id="@+id/bind_btn"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:textSize="17sp"-->
                    <!--android:text="绑定"-->
                    <!--android:textColor="@color/orange"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:gravity="center_vertical|center_horizontal" />-->
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_qrcode_btn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_qrcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的二维码"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|left"
                android:textColor="@color/deepGray"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right2"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middleGray" />

        <LinearLayout
            android:id="@+id/my_balance"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_balance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的余额"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|left"
                android:textColor="@color/deepGray"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right2"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middleGray" />

        <LinearLayout
            android:id="@+id/recharge_record"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_recharge_record" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值记录"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|left"
                android:textColor="@color/deepGray"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right2"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middleGray" />

        <LinearLayout
            android:id="@+id/balance_record"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_balance_record" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费记录"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|left"
                android:textColor="@color/deepGray"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right2"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middleGray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:id="@+id/my_order">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|left"
                android:textColor="@color/deepGray"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right2"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middleGray" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:id="@+id/my_prize">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_prize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的中奖列表"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|left"
                android:textColor="@color/deepGray"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right2"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middleGray" />


        <LinearLayout
            android:id="@+id/to_upgrade"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/upgrade" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件更新"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|left"
                android:textColor="@color/deepGray"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right2"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middleGray" />


        <LinearLayout
            android:id="@+id/about_us"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:layout_gravity="center_vertical|left"
                android:textColor="@color/deepGray"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right2"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/middleGray" />
    </LinearLayout>



    </LinearLayout>
    </ScrollView>
</LinearLayout>
