<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".CustomerMainActivity"
    android:orientation="vertical">
    <!-- 顶部栏 begin -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/topbar_bg">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:id="@+id/btn_back_layout"
            android:background="@drawable/selector_topbtn"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/arrow_back" />

            <TextView
                android:id="@+id/btn_back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="下单"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="23sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 顶部栏 end -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout_confirm_order"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            >


        </ListView>

    </LinearLayout>


    <!-- 操作栏 begin -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/order_food_bottom"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/total_food1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:singleLine="true"
                android:text="0菜"
                android:textSize="18sp"
                android:textColor="@color/orange"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/total_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="18sp"
                android:text=" 0元"
                android:textColor="@color/orange"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <Button
            android:id="@+id/confirm_order"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="10.0dip"
            android:text="下单"
            android:textSize="18sp"
            android:background="@drawable/selector_common_middle_btn"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
    <!-- 操作栏 end -->
</LinearLayout>